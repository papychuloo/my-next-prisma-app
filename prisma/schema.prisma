datasource db {
  url      = "file:./dev.db"
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String   
  createdAt DateTime @default(now())
}


model Skill {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  difficulty  String   @default("EASY")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  tasks       Task[]   // Relation avec Task
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  skillId     Int      // Clé étrangère
  skill       Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade) // Relation avec Skill
}
